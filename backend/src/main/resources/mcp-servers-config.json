{
  "servers": {
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "toggl": {
      "command": "npx",
      "args": ["-y", "@taiseimiyaji/toggl-mcp-server"],
      "env": {
        "TOGGL_API_TOKEN": "${TOGGL_API_TOKEN}"
      }
    },
    "notion": {
      "command": "npx",
      "args": ["-y", "@makenotion/notion-mcp-server"],
      "env": {
        "NOTION_TOKEN": "${NOTION_TOKEN}"
      }
    }
  }
}